<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cashier.Views.facturacion"
             Title="Facturacion">
    <ContentPage.Content>
        <StackLayout Margin="10" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Text="Cobrar" x:Name="btnCobrar" Image="cashmachine.png" BackgroundColor="White" Clicked="btnCobrar_Clicked" Grid.Row="0" Grid.Column="0" HorizontalOptions="FillAndExpand"/>
                <Button Text="Facturas" x:Name="btnFcturas" Image="invoice.png" BackgroundColor="White" Clicked="btnFcturas_Clicked" Grid.Row="0" Grid.Column="1"/>
                
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>